.b-form
  display flex
  flex-direction column
  width 50%
  padding-right 40px

.b-form h2
  padding-top 30px
  padding-bottom 15px
  margin 0
  color #ff8a80

.b-form__input
  display inline-block

.b-form__input input
.b-form__input select
.b-form__input textarea
  display inline
  color #636363
  font-size 20px
  padding 18px 25px
  line-height 1.2
  border-radius 5px
  border 2px solid #e3f2fd
  margin-top 1%
  margin-bottom 1%
  margin-right 1%

.b-form__input select
  width 46.5%
  height auto

.b-form__input select:required:invalid
  color #a9a9a9

.b-form__input select option
  color #636363

.b-form__input input
  width 37%
  height auto

.b-form__input textarea
  width 85%
  height auto
  resize none

.b-form__input button
  float right
  text-transform uppercase
  font-size 20px
  padding 14px 37px
  border-radius 8px
  background #ef5350
  border none
  color #ffffff
  outline none
  cursor pointer
  margin-bottom 5%
  margin-top 3%

@media screen and (min-width: 500px) and (max-width: 1000px)
  .b-form
    width 100%
    align-items center

  .b-form__input input
    width 80%
    margin-right 1%
    margin-bottom 1%

  .b-form__input select
    width 88%
    margin-right 1%

  .b-form__input textarea
    max-width 80%

  .b-form__input button
    float left

@media screen and (min-width: 300px) and (max-width: 500px)
  .b-form
    padding-right 5px
    padding-left 5px
    width 100%
    align-items flex-start

  .b-form h2
    font-size 18px

  .b-form__input input
    width 300px
    display block
    font-size 12px
    height 30px
    padding 4px

  .b-form__input select
    width 312px
    height 35px
    display block
    font-size 12px
    padding 4px

  .b-form__input textarea
    width 300px
    margin-bottom 10px
    display block
    font-size 12px
    padding 4px

  .b-form__input button
    font-size 12px
    padding 12px 27px
    float left

