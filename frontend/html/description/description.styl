.description
  display flex
  flex-direction column
  width 45%
  line-height 1.2
  margin-top 180px
  padding-right 10%
  @media screen and (max-width: 1000px)
    margin-top 60px
    text-align center
    width 100%

  &__tagline
    margin 0
    text-transform uppercase
    font-size 30px
    @media screen and (max-width: 500px)
      font-size 20px
      margin 0
      padding 1%

  &__quote
    font-size 19px
    padding-top 1%
    @media screen and (max-width: 500px)
      font-size 12px
      padding-left 1%

  &__button
    float right
    color #ffffff
    margin 40px 45px 130px 0
    text-transform uppercase
    font-size 18px
    padding 15px 20px
    border-radius 7px
    background #04e4a2
    border none
    outline none
    cursor pointer
    @media screen and (max-width: 1000px)
      margin-bottom 50px
    @media screen and (max-width: 500px)
      margin-top 15px
      font-size 11px
      padding 11px 5px