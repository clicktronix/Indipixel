.header
  border-top 20px solid #04e4a2
  width 100%
  color white
  background-color #e94643
  @media screen and (max-width: 500px)
    border-top 10px solid #04e4a2

  &__logo
    font-family MontserratBold, "Eras Bold ITC", serif or sans
    margin-top 20px
    margin-bottom 20px
    margin-left 60px
    font-size 2rem
    letter-spacing 0.1rem
    cursor default
    @media screen and (max-width: 500px)
      font-size 1.4rem
      padding-left 5%

  &__contact
    font-family GothamBookRegular, "Eras Medium ITC", serif or sans
    font-size 1rem
    margin-top 30px
    margin-bottom 30px
    margin-right 100px
    text-transform uppercase
    color #fff
    border-bottom 2px solid #fdd835
    text-decoration none
    @media screen and (max-width: 500px)
      font-size 0.7rem
      margin-right 40px

  &__contact:hover
    border-bottom 2px solid #fda020



