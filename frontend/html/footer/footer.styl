.footer
  background-color #fefcf2
  height auto
  font-size 16px
  color #636363
  flex 0 0 auto

@media screen and (max-width: 500px)
  .footer
    font-size 11px
    color #636363

.footer
  &__copyright
    margin-top 20px
    margin-bottom 20px
    margin-left 50px

  @media screen and (max-width: 500px)
    &__copyright
      margin-left 1px

  &__e-mail
    display flex
    width 50%
    margin-top 20px
    margin-bottom 20px
    margin-left 50px

  &__e-mail a
    color #636363
    text-decoration none

  @media screen and (max-width: 1000px)
    &__e-mail
      margin-left 0

  @media screen and (max-width: 500px)
    &__e-mail
      margin-left 0

  @media screen and (max-width: 500px)
    &__e-mail_logo
      width 20px
      height 15px
