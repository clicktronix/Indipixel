header
  border-top 20px solid #04e4a2
  width 100%
  color white
  background-color #e94643

.g-container__logo
  padding-top 20px
  padding-bottom: 20px
  padding-left 70px
  font-size 30px

.g-container__contact
  font-size 16px
  padding-top 30px
  padding-bottom 30px
  padding-right 20px
  text-transform uppercase

.g-container__contact a
  color #f9fbe7
  border-bottom 3px solid #fdd835
  text-decoration none

.g-container__contact a:hover
  border-bottom 3px solid #fd8535

@media screen and (min-width: 300px) and (max-width: 500px)
  .g-container__logo
    padding 15px
    font-size 23px

  .g-container__logo span
    padding-left 15px

  .g-container__contact
    font-size 11px