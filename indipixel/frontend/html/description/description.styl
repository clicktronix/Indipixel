.b-description
  display flex
  flex-direction column
  width 50%
  padding-right 4%
  line-height 1.2
  padding-top 15%

@media screen and (max-width: 1000px)
  .b-description
    width 100%

.b-description__tagline h1
  margin 0
  text-transform uppercase
  letter-spacing 2px
  font-size 30px

@media screen and (max-width: 1000px)
  .b-description__tagline h1
    padding-top 15%

@media screen and (max-width: 500px)
  .b-description__tagline h1
    font-size 20px
    margin 0
    padding 1%

.b-description__tagline p
  font-size 19px
  letter-spacing 1px

@media screen and (max-width: 500px)
  .b-description__tagline p
    font-size 12px
    padding-left 1%

.b-description__button
  float right
  color #ffffff
  margin-top 6%
  text-transform uppercase
  font-size 18px
  padding 15px 20px
  border-radius 7px
  background #04e4a2
  border none
  outline none
  cursor pointer
  margin-bottom 15%

@media screen and (max-width: 1000px)
  .b-description__button
    margin-bottom 5%

@media screen and (max-width: 500px)
  .b-description__button
    margin-top 1.5%
    font-size 11px
    padding 11px 15px