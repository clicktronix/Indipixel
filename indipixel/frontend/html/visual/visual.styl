.b-lines__line-1
  position absolute
  background-color #04e4a2
  width 100%
  height 80px
  top 28%
  left -50%
  -webkit-transform rotate(30deg)
  -moz-transform rotate(30deg)
  -ms-transform rotate(30deg)
  -o-transform rotate(30deg)
  transform rotate(30deg)

.b-lines__line-2
  position absolute
  background-color #69f0ae
  width 100%
  height 80px
  top 38%
  left -50%
  -webkit-transform rotate(30deg)
  -moz-transform rotate(30deg)
  -ms-transform rotate(30deg)
  -o-transform rotate(30deg)
  transform rotate(30deg)

.b-home img
  position absolute
  max-width 100%
  padding-top 3.9%
  padding-left 20px
  height auto
  z-index 1

@media screen and (min-width: 500px) and (max-width: 1000px)
  .b-lines__line-1
    display none

  .b-lines__line-2
    display none

  .b-home img
    display none

@media screen and (min-width: 300px) and (max-width: 500px)
  .b-home img
    display none

  .b-lines__line-1
    display none

  .b-lines__line-2
    display none