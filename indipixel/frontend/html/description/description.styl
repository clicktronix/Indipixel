.b-description
  display flex
  flex-direction column
  width 50%
  padding-right 40px
  line-height 1.2

.b-description__tagline h1
  margin 0
  padding-top 35%
  text-transform uppercase
  letter-spacing 2px
  font-size 30px

.b-description__tagline p
  font-size 19px
  letter-spacing 1px

.b-description__button
  float right
  color #ffffff
  margin-top 60px
  text-transform uppercase
  font-size 18px
  padding 15px 20px
  border-radius 7px
  background #04e4a2
  border none
  outline none
  cursor pointer
  margin-bottom 15%

@media screen and (min-width: 500px) and (max-width: 1000px)
  .b-description
    width 100%

  .b-description__tagline h1
    padding-top 15%

  .b-description__button
    margin-bottom 5%

@media screen and (min-width: 300px) and (max-width: 500px)
  .b-description
    width 100%

  .b-description__tagline h1
    font-size 20px
    margin 0
    padding 10px

  .b-description__tagline p
    font-size 12px
    padding-left 10px

  .b-description__button
    margin-top 15px
    font-size 11px
    padding 11px 15px
    margin-bottom 5%