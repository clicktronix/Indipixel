.form
  display flex
  flex-direction column
  width 45%
  padding-right 10%
  @media screen and (max-width: 1000px)
    width 100%
    align-items center
  @media screen and (max-width: 500px)
    padding-right 1%
    padding-left 1%
    width 100%
    align-items flex-start

  &__head
    font-size 1.2rem
    margin-top 26px
    padding-left 4%
    color #ff8a80
    @media screen and (max-width: 500px)
      font-size 1rem
